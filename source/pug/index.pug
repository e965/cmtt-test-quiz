		link(rel="shortcut icon" href=`${PATHS.img}/vc-favicon.ico?v=${_V}`)

		link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto:400,500&amp;subset=cyrillic')

		each CSS in ['power', 'header']
			link(rel='stylesheet' href=`${PATHS.css}/${CSS}.min.css?v=${_V}`)

