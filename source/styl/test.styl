.screen {
	&-start {
		.background {
			background-image url($imgPath/screen_start/tinkoff.png?v=$_V), url($imgPath/screen_start/money.png?v=$_V), url($imgPath/screen_start/paper.png?v=$_V)

			background-repeat no-repeat

			background-size 90px, 200px, 400px

			background-position top 50px right 250px, bottom 70px right 450px, right bottom
		}

		.text-block {
			width fit-content
			max-width 500px

			position relative

			margin-top 100px
			margin-bottom 50px
			margin-left 100px

			z-index 1
		}

		.badge {
			width fit-content
			padding 5px 10px

			position absolute
			top -35px; right 0

			background-color #e25a76

			color #fff

			cursor default

			&:after {
				content: ''

				position absolute
				bottom -15px; right 0

				width 0; height 0

				border-top 15px solid #ba4961
				border-right 15px solid transparent
			}
		}

		.title {
			font-size: 2em
		}

		.text {
			margin-top: 20px
		}

		.button {
			margin-top 210px

			button {
				background-color #fff
				border 0

				box-shadow 0px 15px 22px rgba(#000, .2)

				padding 10px 40px

				font-weight 500
				font-size 1.3em

				&:hover {
					opacity .8
				}
			}
		}
	}

	&-test {
		$question = '.question'

		{$question} {
			width 500px
			margin 30px auto 0

			position relative

			&:not([data-answered]) {
				{$question} {
					&__next-btn {
						display none
					}
				}
			}

			&[data-answered] {
				{$question} {
					&__answers {
						li:not([data-selected]) {
							display none
						}
					}
				}
			}

			&__title {
				margin-top 20px

				font-size 1.5em

				line-height 1.5
				font-weight 500
			}

			&__answers {
				--_border-color #edcdd3
				--_text-color #000

				margin-top 20px

				li {
					list-style none

					&:not([data-selected]) {
						button {
							&:hover {
								opacity .8
							}
						}
					}

					&[data-selected] {
						button {
							font-weight 500

							cursor default
						}
					}

					&[data-right] {
						--_border-color #43a457
						--_text-color #43a457
					}

					&[data-wrong] {
						--_border-color #e25a76
						--_text-color #e25a76
					}

					&:not(:first-child) {
						margin-top 10px
					}
				}

				button {
					background-color #fff

					border solid 2px var(--_border-color)

					text-align left

					font-size 1.05em
					color var(--_text-color)

					padding 10px 40px
				}
			}

			&__explanation {
				margin-top 20px

				line-height 1.5

				&:empty {
					display none
				}
			}

			&__next-btn {
				position fixed
				bottom 50px

				background-color transparent
				border 0

				font-size 1.4em
				font-weight 500

				& > * {
					display inline-block
					vertical-align middle
					pointer-events none
				}

				&:hover {
					color var(--links-hover-color)
				}

				.arrow {
					margin-left 5px
				}
			}
		}
	}
}
