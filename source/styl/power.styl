* {
	padding 0; margin 0
}

html, body, .content {
	width 100%; height 100%;
}

body {
	background-color #feebef

	overflow-y scroll

	font-size 16px
	line-height 1.3

	-webkit-font-smoothing: antialiased;
}

button {
	font-family: inherit

	cursor pointer
}

a { text-decoration: none }

.content {
	display grid

	grid-auto-columns 1fr
	grid-auto-rows 50px 1fr
}

.main {
	padding 20px
}

.screen {
	&:not([data-current]) {
		display none
	}

	&-start {
		p:not(:last-child) {
			margin-bottom 5px
		}

		button {
			padding 2px 5px
		}
	}
}
