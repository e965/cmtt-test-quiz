* {
	padding 0; margin 0
	box-sizing border-box
}

:root {
	--links-hover-color: #e25a76;
}

html, body, .content {
	width 100%; height 100%;
}

body {
	background-color #feebef

	overflow-y scroll

	font-family Roboto, Helvetica, Tahoma, Arial, sans-serif
	font-size 16px

	line-height 1.3

	-webkit-font-smoothing: antialiased;
}

button {
	font-family: inherit

	cursor pointer
	outline none
}

a {
	text-decoration: none

	&, /button {
		transition all .3s ease-in-out
	}
}

.content {
	display grid

	grid-auto-columns 1fr
	grid-auto-rows 50px 1fr
}

.main {
	padding 20px
}

.screen {
	&:not([data-current]) {
		display none
	}

	&-start {
		p:not(:last-child) {
			margin-bottom 5px
		}

		button {
			padding 2px 5px
		}
	}
}
