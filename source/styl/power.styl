* {
	padding 0; margin 0
	box-sizing border-box
}

:root {
	--links-hover-color: #e25a76;
}

html, body, .content {
	width 100%; height 100%;
}

body {
	background-color #feebef

	overflow-y scroll

	font-family Roboto, Helvetica, Tahoma, Arial, sans-serif
	font-size 16px

	line-height 1.3

	-webkit-font-smoothing: antialiased;
}

button {
	font-family: inherit

	cursor pointer
	outline none

	user-select none
}

a {
	text-decoration: none

	&, /button {
		transition all .3s ease-in-out
	}
}

.content {
	display grid

	grid-auto-columns 1fr
	grid-auto-rows 50px 1fr
}

.main {
	display flex
	justify-content center
	align-items center

	padding 20px
}

.screen {
	width 1000px; height 530px

	background-image url($imgPath/test-background.png?v=$_V)
	background-repeat no-repeat
	background-size cover

	position relative

	&:not([data-current]) {
		display none
	}

	box-shadow 0px 0px 4px rgba(#000, .2);

	p:not(:last-child) {
		margin-bottom 5px
	}

	.background {
		position absolute
		top 0; left 0
		width 100%; height 100%

		z-index 0
	}
}
