@import 'inc/mixins'

* {
	padding 0; margin 0
	box-sizing border-box
}

:root {
	--links-hover-color #e25a76

	--quiz-width 1000px
	--quiz-height 530px
}

html, body, .content {
	width 100%; height 100%
}

body {
	background-color #feebef

	font-family Roboto, Helvetica, Tahoma, Arial, sans-serif
	font-size 16px

	line-height 1.3

	-webkit-font-smoothing antialiased
}

button {
	font-family: inherit

	cursor pointer
	outline none

	user-select none
}

a {
	text-decoration: none

	&, /button, /.likely__widget {
		transition all .1s ease-in-out
	}
}

b, strong {
	font-weight 500
}

.content {
	display grid

	grid-template-columns 1fr
	grid-template-rows 1fr
}

.main {
	display flex
	justify-content center
	align-items center
}

.screen {
	width: 100%; height var(--quiz-height)
	max-width var(--quiz-width)

	background-image url($imgPath/background.png?v=$_V)
	background-repeat no-repeat
	background-size cover

	position relative

	margin 10px

	box-shadow 0px 0px 4px rgba(#000, .2)

	&:not([data-current]) {
		visibility-hidden()
	}

	&-loading {
		display flex

		flex-direction column
		justify-content center
		align-items center
		font-size 1.3em
	}

	p:not(:last-child) {
		margin-bottom 5px
	}

	a {
		color #105990
		border-bottom 1px solid #a0d0f5

		&:hover {
			color #cd192e
			border-bottom 1px solid #f6b4bc
		}
	}

	.background {
		position absolute
		top 0; left 0
		width 100%; height 100%

		z-index 0
	}
}

.cache {
	visibility-hidden()
}
