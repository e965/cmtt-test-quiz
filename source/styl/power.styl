* {
	padding 0; margin 0
	box-sizing border-box
}

:root {
	--links-hover-color #e25a76

	--test-width 1000px
	--test-height 530px
}

html, body, .content {
	width 100%; height 100%
}

body {
	background-color #feebef

	font-family Roboto, Helvetica, Tahoma, Arial, sans-serif
	font-size 16px

	line-height 1.3

	-webkit-font-smoothing antialiased
}

button {
	font-family: inherit

	cursor pointer
	outline none

	user-select none
}

a {
	text-decoration: none

	&, /button {
		transition all .1s ease-in-out
	}
}

.content {
	&__index {
		display grid

		grid-template-columns 1fr
		grid-template-rows 50px 1fr

		iframe {
			width calc(var(--test-width) + 20px)
			height calc(var(--test-height) + 20px)
			border 0
		}

		.main {
			padding: 20px
		}
	}
}

.main {
	display flex
	justify-content center
	align-items center
}

.screen {
	width var(--test-width); height var(--test-height)

	background-image url($imgPath/test-background.png?v=$_V)
	background-repeat no-repeat
	background-size cover

	position relative

	margin 10px

	box-shadow 0px 0px 4px rgba(#000, .2)

	&:not([data-current]) {
		display none
	}

	&-nojs {
		display none

		flex-direction column
		justify-content center
		align-items center

		font-size 1.3em
	}

	p:not(:last-child) {
		margin-bottom 5px
	}

	a {
		color #105990
		border-bottom 1px solid #a0d0f5

		&:hover {
			color #cd192e
			border-bottom 1px solid #f6b4bc
		}
	}

	.background {
		position absolute
		top 0; left 0
		width 100%; height 100%

		z-index 0
	}
}
